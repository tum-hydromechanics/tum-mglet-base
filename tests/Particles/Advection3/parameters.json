{
    "time": {
        "mtstep": 100,
        "dt": 0.1,
        "tend": 10.0,
        "itinfo": 1,
        "itcheck": 10
    },
    "io": {
        "grids": "particle_grids.h5",
        "infile": "fields.h5",
        "outfile": "fields.h5"
    },
    "ib": {
        "type": "noib"
    },
    "flow": {
        "tu_level": 0.0,
    	"solve": false,
        "gmol": 0.01,
        "rho": 1.0,
        "uinf": ["var a := 2.0; a*y", "var b := 0; b*x", "var c := 0; c*x"],
        "gradp": [0.0, 0.0, 0.0],
        "pressuresolver": {
            "type": "sip",
            "epcorr": 0.000768,
            "nouter_min": 2,
            "nouter": 9,
            "ninner": 5,
            "omega": 1.1,
            "loglevel": 3
        },
        "lesmodel": {
            "model": "none"
        }
    },
    "probes": {
        "itsamp": 8,
        "tstart": 0.0,
        "arrays": [
            {
                "name": "the_probe",
                "variables": ["P"],
                "positions": [
                    [ 0.5, 0.5, 0.5 ]
                ]
            }
        ]
    },
    "particles": {
        "read": true,
        "init_np": 10,
        "list_len": 100,
        "interp": true,
        "D":[0.0, 0.0, 0.0],
        "terminal": "verbose",
        "slice_dir": "X",
        "nslice_levels": 1,
        "nslices": [10],
        "slice_levels": [1.0],
        "write": true,
        "snapshot_step": 1
    }
}
